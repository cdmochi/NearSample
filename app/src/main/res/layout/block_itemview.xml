<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tvVotedNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="12dp"
        android:text="Voted Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvVotedName"
        tools:text="James"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/tvVotedNameTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvVotedNameTitle" />

    <TextView
        android:id="@+id/tvPreviousHashTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Previous Hash"
        app:layout_constraintStart_toStartOf="@+id/tvVotedName"
        app:layout_constraintTop_toBottomOf="@+id/tvVotedName" />

    <TextView
        android:id="@+id/tvPreviousHash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        tools:text="alsjdf;laskjdf;l"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/tvPreviousHashTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvPreviousHashTitle" />


    <TextView
        android:id="@+id/tvHashTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Hash"
        app:layout_constraintStart_toStartOf="@+id/tvPreviousHash"
        app:layout_constraintTop_toBottomOf="@+id/tvPreviousHash" />

    <TextView
        android:id="@+id/tvHash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        tools:text="aklsdfj;klasdjfl;as"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/tvHashTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvHashTitle" />

    <TextView
        android:id="@+id/tvTotalPointTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:text="Total Points"
        app:layout_constraintStart_toEndOf="@+id/tvVotedNameTitle"
        app:layout_constraintTop_toTopOf="@+id/tvVotedNameTitle" />

    <TextView
        android:id="@+id/tvTotalPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        tools:text="122"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/tvTotalPointTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvTotalPointTitle" />

    <TextView
        android:id="@+id/tvTimeStampTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="TimeStamp"
        app:layout_constraintStart_toStartOf="@+id/tvHash"
        app:layout_constraintTop_toBottomOf="@+id/tvHash" />

    <TextView
        android:id="@+id/tvTimeStamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        tools:text="26/01/2020"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/tvTimeStampTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvTimeStampTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>